---
import BaseLayout from './BaseLayout.astro';

// We accept a title and description as props
const { title, description } = Astro.props;
---

<style>
    .showcase-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }
    .header-content {
        text-align: center;
        margin-bottom: 3rem;
    }
    .header-content h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }
    .intro-text {
        color: #666;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }
    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }
</style>

<BaseLayout pageTitle={title}>

    <section class="showcase-wrapper">

        <div class="header-content">
            <h1>{title}</h1>
            {description && <p class="intro-text">{description}</p>}
        </div>

        <div class="grid-container">
            <slot />
        </div>

    </section>
</BaseLayout>