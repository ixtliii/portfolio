<style>
    .golden-about path{
        opacity: 0;
    }
    section{
        #about-heading{
            color: var(--c-primary);
            display: flex;
            .artem, .diakunchak{
                display: flex;
                flex-direction: column;
                align-items: center;

                span{
                    font-size: 2rem;
                    font-weight: 700;
                    line-height: 130%;
                }
            }

        }


        p{
            color: var(--c-mid);
            letter-spacing: 0.16px;
            span{
                font-weight: 500;
                color: var(--c-primary);
            }
        }
        .contact-wrapper{
            display: flex;
            flex-direction: column;
            gap: .5rem;

            h3{
                color: var(--c-primary);
                font-style: normal;
                font-weight: 500;
                letter-spacing: 0.54px;
            }
            p{
                span{
                    a{
                        font-weight: 500;
                        color: var(--c-primary);
                        text-decoration-line: underline;
                        text-decoration-style: solid;
                        text-decoration-skip-ink: auto;
                        text-decoration-thickness: auto;
                        text-underline-offset: auto;
                        text-underline-position: from-font;
                    }
                }
            }
        }
    }
    @media screen and (width <= 30em){
        section{
            margin-top: 5vh;
            height: 90vh;
            .golden-about{
                height: 100%;
                width: 100%;
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
            }

            #about-heading{
                color: var(--c-primary);
                display: flex;
                grid-column: 1 / span 5;
                grid-row: 1 / span 1;
                gap: 1.5rem;
                padding: 0;
                margin: 0;
                height: 0;

                .artem, .diakunchak{
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    padding: 0;
                    margin: 0;
                    row-gap: 0;
                    span{
                        font-size: 2rem;
                        font-weight: 700;
                        line-height: 130%;
                    }
                }

            }

            .about-wrapper{
                display: flex;
                flex-direction: column;
                grid-column: 6 / span 7;
                gap: 2rem;

                img{
                    border-radius: 12px;
                }
            }

            .contact-wrapper{
                grid-row: 9;
                grid-column: 1 / span 10;
                h3{
                    color: var(--c-primary);
                    font-size: 1.2rem;
                }

                p{
                    line-height: 160%;
                };
            }

        }

    }
</style>

