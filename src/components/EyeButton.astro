<script>
    document.addEventListener('DOMContentLoaded', function() {
        const eyeContainer = document.getElementById('animated-eye');
        const pupil = eyeContainer.querySelector('.pupil');
        const eyelid = eyeContainer.querySelector('.eyelid');

        eyeContainer.classList.add('looking');

        eyeContainer.addEventListener('mousemove', (e) => {
            const rect = eyeContainer.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;

            const deltaX = (e.clientX - centerX) / (rect.width / 2);
            const deltaY = (e.clientY - centerY) / (rect.height / 2);

            const maxMove = 8;
            const moveX = deltaX * maxMove;
            const moveY = deltaY * maxMove;

            pupil.style.transform = `translate(calc(-50% + ${moveX}px), calc(-60% + ${moveY}px))`;
        });

        eyeContainer.addEventListener('mouseleave', () => {
            pupil.style.transform = 'translate(-50%, -60%)';
        });

        eyeContainer.addEventListener('click', () => {
            eyelid.style.opacity = '1';
            eyelid.style.transform = 'scaleY(0.2)';

            setTimeout(() => {
                eyelid.style.opacity = '0';
                eyelid.style.transform = 'scaleY(1)';
            }, 200);
        });

        setInterval(() => {
            if (!eyeContainer.matches(':hover') && Math.random() > 0.5) {
                const randomX = (Math.random() - 0.5) * 12;
                const randomY = (Math.random() - 0.5) * 8;

                pupil.style.transform = `translate(calc(-50% + ${randomX}px), calc(-60% + ${randomY}px))`;

                setTimeout(() => {
                    if (!eyeContainer.matches(':hover')) {
                        pupil.style.transform = 'translate(-50%, -60%)';
                    }
                }, 1500);
            }
        }, 3000);
    });
</script>