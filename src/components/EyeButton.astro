<style>
    .wrapper{
        position: relative;
        cursor: pointer;
        transition: transform 0.3s ease;

        &:hover {
            transform: scale(1.05);
        }

        .circular-text{
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            transition: transform 0.5s ease;
        }

        .background{
            width: 46px;
            height: 46px;
            flex-shrink: 0;
            background: url("/img/eyebg.png") lightgray 50% / cover no-repeat;
            border-radius: 50%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            overflow: hidden;

            .white{
                width: 46px;
                height: 18px;
                flex-shrink: 0;
                fill: #F2F2F2;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                transition: all 0.3s ease;
            }

            .pupil{
                fill: #181820;
                width: 16px;
                height: 16px;
                flex-shrink: 0;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -60%);
                z-index: 1000;
                transition: all 0.3s ease-out;
            }

            .eyelid {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: url("/img/eyebg.png") lightgray 50% / cover no-repeat;
                border-radius: 50%;
                transform-origin: center top;
                z-index: 1100;
                transition: transform 0.4s ease;
                opacity: 0;
            }
        }
    }

    @keyframes lookAround {
        0% { transform: translate(-50%, -60%); }
        15% { transform: translate(-30%, -70%); }
        30% { transform: translate(-70%, -50%); }
        45% { transform: translate(-40%, -65%); }
        60% { transform: translate(-60%, -55%); }
        75% { transform: translate(-35%, -75%); }
        90% { transform: translate(-65%, -45%); }
        100% { transform: translate(-50%, -60%); }
    }

    .looking .pupil {
        animation: lookAround 12s ease-in-out infinite;
    }

    .wrapper:hover .eyelid {
        opacity: 1;
        transform: scaleY(0.4);
    }

    .wrapper:hover .circular-text {
        transform: translate(-50%, -50%) rotate(360deg);
    }

    @media screen and (width <= 30em){
        .wrapper{
            grid-column: 10;
            grid-row: 8;
            margin-top: -4rem;
            margin-right: -1rem;
        }
    }
</style>

