---
const navLinks = [
    { name: "Home", href: "/#hero-section" },
    { name: "About", href: "/#about-section" },
    { name: "Work", href: "/#work-section" },
    { name: "Blog", href: "/#blog-section" },
];
---
<style>
    .navbar-mobile {
        position: fixed;
        top: 2rem;
        right: 2rem;
        width: fit-content;
        height: 4rem;
        z-index: 2000;
        background: transparent;
        display: flex;
        justify-content: flex-end;
        align-items: center;

        .hamburger {
            background: none;
            border: none;
            cursor: pointer;
            padding: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            width: 4.5rem;
            gap: 0.75rem;
            z-index: 2001;
            border-radius: 1rem;
            background: rgba(255, 255, 255, 0.35);
            backdrop-filter: blur(40px);
        }
        .stroke {
            display: block;
            width: 100%;
            height: 2px;
            background-color: var(--c-primary);
            transition: transform 0.3s ease, opacity 0.3s ease;
            mix-blend-mode: difference;
        }
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1999;
        background-color: var(--c-dark);
        transform: translateY(-100%);
        opacity: 0;
        transition: transform 0.4s ease-in-out, opacity 0.4s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;

        .nav-links {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            gap: 2rem;
            .overlay-link {
                color: var(--c-primary);
                text-decoration: none;
                font-size: 2rem;
                display: block;
                padding: 0.5rem 0;
                transition: color 0.2s ease;
                text-transform: uppercase;
                letter-spacing: 0.32px;
            }
        }
    }

    .overlay.is-open {
        transform: translateY(0);
        opacity: 1;
    }

    .hamburger.is-active .top {
        transform: translateY(300%) rotate(45deg);
    }

    .hamburger.is-active .bottom {
        transform: translateY(-300%) rotate(-45deg);
    }
    .navbar{
        display: none;
    }
    @media screen and (width >= 65em) {
        .navbar-mobile{
            display: none;
        }
        .navbar{
            position: fixed;
            top: 1rem;
            right: 1rem;
            display: flex;
            z-index: 10000;
            width: 60%;
            justify-content: space-between;
            .nav-links__desktop, .helper-links{
                display: flex;
                padding: 0.5rem;
                justify-content: center;
                align-items: center;
                border-radius: 1.5rem;
                border: 1px solid #FFF;
                background: #FBFBFB;
                gap: .1rem;
                .link{
                    display: flex;
                    padding: 0.625rem 1.2rem;
                    justify-content: center;
                    align-items: center;
                    gap: 0.125rem;
                    font-size: var(--fs-body);
                    border-radius: 1rem;
                    font-weight: 450;
                }
                .download-button{
                    background-color:var(--c-dark);
                    color: var(--c-bg-white);
                }
                .link:hover{
                    background-color: #EAEAEB;
                }
                .download-button:hover{
                    background-color: #56565c;
                }
            }
        }
    }

</style>


<nav class="navbar">
    <ul class="nav-links__desktop">
        {navLinks.map((link) => (
                <li>
                    <a href={link.href} class="link">{link.name}</a>
                </li>
        ))}
    </ul>
    <ul class="helper-links">
        <li class="link"><a href="mailto:artem.diakunchak.work@gmail.com"> Contact me</a></li>
        <li class="link download-button"><a href="/Artem-Diakunchak-CV.pdf" download>Download CV</a></li>
    </ul>
</nav>

<nav class="navbar-mobile">
    <button class="hamburger" id="menu-toggle" aria-label="Toggle navigation menu">
        <span class="stroke top"></span>
        <span class="stroke bottom"></span>
    </button>
</nav>

<div class="overlay" id="overlay-menu">
    <ul class="nav-links">
        {navLinks.map((link) => (
                <li>
                    <a href={link.href} class="overlay-link">{link.name}</a>
                </li>
        ))}
        <li>
            <a href="/Artem-Diakunchak-CV.pdf" download class="overlay-link">Download CV</a>
        </li>
    </ul>
</div>
<script>
    const toggleButton = document.getElementById('menu-toggle');
    const overlayMenu = document.getElementById('overlay-menu');
    const links = overlayMenu.querySelectorAll('.overlay-link');

    const closeMenu = () => {
        toggleButton.classList.remove('is-active');
        overlayMenu.classList.remove('is-open');
    };

    toggleButton.addEventListener('click', () => {
        toggleButton.classList.toggle('is-active');
        overlayMenu.classList.toggle('is-open');

        if (overlayMenu.classList.contains('is-open')) {
            document.body.style.overflow = 'hidden';
        } else {
            document.body.style.overflow = '';
        }
    });

    links.forEach(link => {
        link.addEventListener('click', () => {
            closeMenu();
            document.body.style.overflow = '';
        });
    });
</script>