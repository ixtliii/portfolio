
---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, render } from "astro:content";
import WorkDetails from "../../components/WorkDetails.astro";

export async function getStaticPaths() {
    const projects = await getCollection("projects");

    const paths = projects.map((project) => ({
    params: { slug: project.slug },
    props: {
            projectEntry: project,
        },
    }));

    return paths;
    }

const { projectEntry } = Astro.props;
const { Content } = await render(projectEntry);

const projectData = projectEntry.data;
---

<BaseLayout pageTitle={projectData.title}>
    <WorkDetails project={projectData}>
        <Content />
    </WorkDetails>
</BaseLayout>